    // Open method
    private void Open() {
        // Choose directory to open chat transcripts
        FileFilter filter = new FileNameExtensionFilter("DAT file", "dat");
        JFileChooser fc = new JFileChooser();
        fc.setAcceptAllFileFilterUsed(false);
        fc.setFileSelectionMode(JFileChooser.DIRECTORIES_ONLY);
        fc.addChoosableFileFilter(filter);
        fc.setAcceptAllFileFilterUsed(true);
        fc.showOpenDialog(fc);
        choosedir = fc.getSelectedFile().toString();
        System.out.println(choosedir);

        /* Read list of directories and files
         File folder = new File(choosedir);
         File[] listOfFiles = folder.listFiles();

         for (int i = 0; i < listOfFiles.length; i++) {
         if (listOfFiles[i].isFile()) {
         jTextArea1.append(listOfFiles[i].getName() + "\n");
         } else if (listOfFiles[i].isDirectory()) {
         jTextArea1.append(listOfFiles[i].getName() + "\n");
         }
         } */
    }

